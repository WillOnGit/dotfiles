[user]
	name = Will Bolton
	email = git@bolton.me.uk
[core]
	editor = vim
	excludesFile = ~/.git-excludesFile
	pager = less -F
	hooksPath = ~/.githooks
[pull]
	ff = true
[push]
	autoSetupRemote = true
[init]
	defaultBranch = main
[alias]
	c = clean -x -d -n
	cv = commit --verbose
	d = diff
	dw = diff --color-words
	dww = diff --color-words=.
	dc = diff --cached
	dcw = diff --cached --color-words
	dcww = diff --cached --color-words=.
	fl = log --oneline --graph --branches --no-show-signature
	mc = log --branches --author=wilbol*
	s = status
	t = for-each-ref refs/tags
[tag]
	sort = -creatordate
[log]
	showSignature = true
