[user]
	name = Will Bolton
	email = will.bolton@exadev.io
[core]
	editor = vim
	excludesFile = ~/.git-excludesFile
	pager = less -F
	hooksPath = ~/.githooks
[pull]
	ff = true
[push]
	autoSetupRemote = true
[init]
	defaultBranch = main
[alias]
	c = clean -x -d -n
	cc = clean -x -d -i
	cv = commit --verbose
	d = diff
	dw = diff --color-words
	dww = diff --color-words=.
	dc = diff --cached
	dcw = diff --cached --color-words
	dcww = diff --cached --color-words=.
	fl = log --oneline --graph --branches --no-show-signature
	mc = log --branches --author=will.bolton@exadev.io
	mcs = log --branches --author=will.bolton@exadev.io --no-show-signature --oneline
	s = status
	showw = show --color-words
	showww = show --color-words=.
	t = for-each-ref refs/tags
[tag]
	sort = -creatordate
[commit]
	gpgSign = true
[log]
	showSignature = true
