[user]
	name = Will Bolton
	email = git@bolton.me.uk
[core]
	editor = vim
	excludesFile = ~/.git-excludesFile
	pager = less -F
	hooksPath = ~/.githooks
[pull]
	ff = true
[push]
	autoSetupRemote = true
[init]
	defaultBranch = main
[alias]
	ae = log --no-show-signature --branches --format=%ae
	c = clean -x -d -n
	cc = clean -x -d -i
	cv = commit --verbose
	d = diff
	dw = diff --color-words
	dww = diff --color-words=.
	dc = diff --cached
	dcw = diff --cached --color-words
	dcww = diff --cached --color-words=.
	fl = log --oneline --graph --branches --no-show-signature
	mc = log --branches --author=git@bolton.me.uk
	mcs = log --branches --author=git@bolton.me.uk --no-show-signature --oneline
	n = rev-parse HEAD
	ol = log --oneline --no-show-signature
	s = status
	showw = show --color-words
	showww = show --color-words=.
	t = for-each-ref refs/tags
[tag]
	sort = -creatordate
[log]
	showSignature = false
[fetch]
	prune = true
